---
import logo from "@/assets/logo.svg";
import AnimatedCode from "@/pages/_components/animated-code.astro";
import Section from "@/pages/_components/section.astro";
import { Image } from "astro:assets";
---

<Section id="section-one" class="bg-grid">
  <div
    class="flex flex-col items-center m-auto w-full max-w-7xl"
    id="section-one-content"
  >
    <Image src={logo} alt="CodaFolks logo" class="w-full max-w-7xl h-auto" />
    <h1 class="text-[62px] font-extrabold py-2">Coda Your Future Today</h1>
  </div>
  <AnimatedCode />
</Section>
