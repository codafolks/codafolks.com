---
import logo from "@/assets/logo.svg";
import AnimatedCode from "@/components/AnimatedCode.astro";
import Section from "@/components/Section.astro";
import { Image } from "astro:assets";
---

<Section id="section-one" class="bg-grid">
  <div
    class="flex flex-col items-center m-auto w-full max-w-7xl"
    id="section-one-content"
  >
    <Image src={logo} alt="CodaFolks logo" class="w-full max-w-7xl h-auto" />
    <h1 class="text-2lx sm:text-4xl md:text-[62px] font-extrabold py-2">
      Coda Your Future Today
    </h1>
  </div>
  <AnimatedCode />
</Section>
