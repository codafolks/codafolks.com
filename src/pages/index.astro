<MainLayout>
	<section
		class="w-full bg-slate-950 py-32 px-16 flex flex-col items-center h-[calc(100vh-129px)]"
	>
		<div
			class="text-gray-200 grid grid-cols-[70%,30%] items-center m-auto w-full max-w-7xl"
		>
			<div class="flex flex-col items-center">
				<Image src={logo} alt="CodaFolks logo" class="w-full h-auto" />
				<h1 class="text-7xl font-extrabold">Coda Your Future Today</h1>
				<p class="text-2xl mt-4">
					Your Gateway to Open-Source Projects and Practical Software Learning
				</p>
			</div>
			<Image
				src={homeIllustration}
				alt="Illustration of a person coding"
				class="max-w-3xl h-auto"
			/>
		</div>
	</section>
