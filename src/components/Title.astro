---
import type { HTMLTag, Polymorphic } from "astro/types";

const {
  as: Tag = "h3",
  class: classOverwrite,
  ...rest
} = Astro.props as {
  as: HTMLTag;
  class?: string;
};

type Props<Tag extends HTMLTag> = Polymorphic<{
  as: Tag;
}>;
---

<Tag
  class:list={[
    "text-3xl md:text-5xl py-6 font-league-spartan font-bold text-primary",
    classOverwrite,
  ]}
  {...rest}
>
  <slot />
</Tag>
