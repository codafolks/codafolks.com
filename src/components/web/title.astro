---
import type { HTMLTag, Polymorphic } from "astro/types";

const { as: Tag = "h3", ...rest } = Astro.props as {
  as: HTMLTag;
};

type Props<Tag extends HTMLTag> = Polymorphic<{
  as: Tag;
}>;
---

<Tag
  {...rest}
  class="bg-gradient-to-r from-pink-500 to-purple-700 bg-clip-text text-transparent text-3xl font-semibold"
>
  <slot />
</Tag>
